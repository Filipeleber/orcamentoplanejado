// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1. Configuração do Gerador e do Banco de Dados
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Enums
enum UserStatus {
  PENDING
  ACTIVE
  TRIAL
  SUSPENDED
  CANCELED
}

enum CategoryType {
  INCOME
  EXPENSE
  INVESTMENT
}

enum TransactionType {
  INCOME
  EXPENSE
  INVESTMENT
}

enum RecurrenceType {
  MONTHLY
  WEEKLY
  YEARLY
  CUSTOM
}

enum InvestmentType {
  STOCKS
  CRYPTO
  REAL_ESTATE
  FIXED_INCOME
  FUNDS
  OTHER
}

// 3. Modelos do Aplicativo e do NextAuth

// Modelos exigidos pelo NextAuth
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Seu modelo User adaptado para o NextAuth
model User {
  id               String       @id @default(cuid())
  name             String?
  email            String?      @unique
  emailVerified    DateTime?
  image            String?
  password         String? // Mantido, mas NextAuth gerencia isso de forma diferente com providers
  phone            String?      @unique
  role             String       @default("user")
  status           UserStatus   @default(PENDING)
  isActive         Boolean?
  hotmartId        String?      @unique
  resetToken       String?
  resetTokenExpiry DateTime?
  firstLogin       Boolean      @default(true)
  lgpdConsentAt    DateTime?
  canceledAt       DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  // Relações
  accounts      Account[]
  sessions      Session[]
  categories    Category[]
  transactions  Transaction[]
  investments   Investment[]
  goals         Goal[]
  aiAnalyses    AiAnalysis[]
  whatsAppLinks WhatsAppLink[]
}

model Category {
  id        String       @id @default(cuid())
  name      String
  type      CategoryType
  color     String?
  userId    String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  // Relações
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]

  @@unique([userId, name, type])
}

model Transaction {
  id              String           @id @default(cuid())
  amount          Decimal          @db.Decimal(12, 2)
  description     String
  date            DateTime
  type            TransactionType
  isRecurring     Boolean          @default(false)
  recurrenceType  RecurrenceType?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  // Relações
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}

model Investment {
  id               String         @id @default(cuid())
  name             String
  type             InvestmentType
  initialAmount    Decimal        @db.Decimal(12, 2)
  currentAmount    Decimal        @db.Decimal(12, 2)
  profitPercentage Decimal?       @db.Decimal(5, 2)
  startDate        DateTime
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  // Relações
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Goal {
  id            String   @id @default(cuid())
  name          String
  targetAmount  Decimal  @db.Decimal(12, 2)
  currentAmount Decimal  @db.Decimal(12, 2) @default(0)
  deadline      DateTime
  completed     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relações
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model AiAnalysis {
  id        String   @id @default(cuid())
  userId    String
  month     Int
  year      Int
  analysis  String // (JSON/Text)
  createdAt DateTime @default(now())

  // Relações
  user User @relation(fields: [userId], references: [id])
}

model WhatsAppLink {
  id         String   @id @default(cuid())
  phone      String   @unique
  isVerified Boolean  @default(false)
  createdAt  DateTime @default(now())
  verifiedAt DateTime?

  // Relação com o usuário
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}